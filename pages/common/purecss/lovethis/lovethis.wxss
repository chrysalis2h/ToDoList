.lovethis {
  background-color: white !important;
  font-family: "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
  color: tomato;
  font-size: 30px;
  margin: 0;
  padding: 0;
}

div {
  display: inline-block;
  border: 3px solid tomato;
  padding: 10px;
  border-radius: 10px;
  margin: 0 2px;
  cursor: pointer;
  transition: all 0.2s;
  text-align: center;
}

strong {
  position: absolute;
  margin-top: -70px;
  margin-left: -80px;
  background: tomato;
  color: white;
  padding: 7px;
  border-radius: 7px;
  font-size: 0.7em;
  text-align: center;
  width: 50px;
  transition: margin-top .1s;
}

i {
  width: 0;
  height: 0;
  border: 10px solid transparent;
  border-top-color: tomato;
  position: absolute;
  margin-top: 33px;
  margin-right: -10px;
  right: 50%;
}

.c {
  position: absolute;
  top: 50%;
  margin-top: -15px;
  text-align: center;
  display: block;
  width: 100%;
  padding: 0;
}

div:hover {
  background: tomato;
  color: white;
}

div:hover > strong {
  margin-top: -75px;
}

span {
  -moz-user-select: none;
  -khtml-user-select: none;
  -webkit-user-select: none;
  -o-user-select: none; 
}